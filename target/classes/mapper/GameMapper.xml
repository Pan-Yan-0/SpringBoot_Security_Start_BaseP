<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.py.mapper.GameMapper">
    <resultMap id="GameMap" type="com.py.domain.RequestBody.AddHistory">
        <result column="id" property="Id" jdbcType="INTEGER" />
        <result column="game_id" property="GameId" jdbcType="VARCHAR" />
        <result column="user_id" property="UserId" jdbcType="VARCHAR" />
        <result column="start_time" property="date" jdbcType="CHAR" />
        <result column="time" property="time" jdbcType="VARCHAR" />
    </resultMap>

    <insert id="addHistory">
        insert into history(id, game_id, user_id, start_time, time)
        VALUES(#{Id},#{GameId},#{UserId},#{date},#{time})

    </insert>
    <select id="getHistory" resultType="com.py.domain.RequestBody.AddHistory">
        select * from history where user_id = #{userId}
    </select>

</mapper>